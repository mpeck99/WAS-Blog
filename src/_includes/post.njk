---
layout: base.njk
---
{%- set tagUrl %}/tags/{{ tag }}/{% endset -%} 
<article aria-labelledby="title">
  <header>
    <h1 id="title">{{ title }}</h1>
    <time> {{ page.date | postDate }}</time>
    <div class="tags">
      <h2>Tags:</h2>
      <ul class="taglist">
        {% for tag in tags %}
          {% if tag !== 'posts' %}
            <li><a href="/tags/{{tag}}" class="post-tag">{{ tag }}</a></li>
          {% endif %}
        {% endfor %}
      </ul>
    </div>
  </header>
  <div class="content">
      {{ content | safe }}
  </div>
</article>
